generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Author {
  id            Int      @id @default(autoincrement())
  firstName     String
  familyName    String
  dateOfBirth   DateTime?
  dateOfDeath   DateTime?
  url           String?            
  books         Book[]             
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Book {
  id            Int      @id @default(autoincrement())
  title         String
  summary       String?
  ISBN          String?   @unique
  url           String?
  authorId      Int
  author        Author    @relation(fields: [authorId], references: [id])
  genres        Genre[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Genre {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  url       String?
  books     Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
